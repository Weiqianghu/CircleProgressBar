<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huweiqiang.circleprogressbar.MainActivity">

    <com.huweiqiang.circleprogressbar.widget.CircleProgressBar
        android:id="@+id/progress1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        app:circle_width="10dp"
        app:color="@color/colorAccent"
        app:max="300"
        app:progress="90"
        app:text_size="50sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.huweiqiang.circleprogressbar.widget.CircleProgressBar
            android:id="@+id/progress2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            app:circle_width="6dp"
            app:color="@android:color/white"
            app:max="100"
            app:progress="67"
            app:text_size="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.huweiqiang.circleprogressbar.widget.CircleProgressBar
                android:id="@+id/progress3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/holo_blue_dark"
                app:circle_width="6dp"
                app:color="@android:color/white"
                app:max="200"
                app:progress="90"
                app:text_size="30sp" />

            <com.huweiqiang.circleprogressbar.widget.CircleProgressBar
                android:id="@+id/progress4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/holo_red_light"
                android:padding="10dp"
                app:circle_width="12dp"
                app:color="@android:color/white"
                app:max="500"
                app:progress="90"
                app:text_size="60sp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
